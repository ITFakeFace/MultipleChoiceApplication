<Window x:Class="MultipleChoice.AttemptResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultipleChoice"
        mc:Ignorable="d"
        Title="AttemptResultWindow"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen" Height="746" Width="1338">

    <Window.Resources>
        <!-- Style cho TextBlock Result -->
        <Style x:Key="ResultTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="DarkSlateGray"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,50,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- TextBlock Result -->
        <TextBlock Text="Result" Style="{StaticResource ResultTextBlockStyle}" />

        <Grid Margin="100,153,100,0" Grid.RowSpan="2" Height="398" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Dòng 1 -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Answer By" FontWeight="Bold" FontSize="36" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="AnswerBy" FontWeight="Bold" FontSize="36" VerticalAlignment="Center"/>

            <!-- Dòng 2 -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Quizz:" FontWeight="Bold" FontSize="36" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="QuizzName" FontWeight="Bold" FontSize="36" VerticalAlignment="Center"/>

            <!-- Dòng 3 -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Correct Number" FontWeight="Bold" FontSize="36" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="CorrectNumber" FontWeight="Bold" FontSize="36" VerticalAlignment="Center"/>

            <!-- Dòng 4 -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Time" FontWeight="Bold" FontSize="36" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="Time" FontWeight="Bold" FontSize="36" VerticalAlignment="Center"/>

            <!-- Dòng 5 -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Complete" FontWeight="Bold" FontSize="36" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="IsCompelete" FontWeight="Bold" FontSize="36" VerticalAlignment="Center"/>
        </Grid>
        <Button Content="OK" HorizontalAlignment="Left" Height="52" Margin="985,613,0,0" VerticalAlignment="Top" Width="206" FontSize="36" Background="LightGreen" Click="Button_Click"/>
    </Grid>
</Window>
