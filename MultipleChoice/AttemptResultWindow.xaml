<Window
    x:Class="MultipleChoice.AttemptResultWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MultipleChoice"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AttemptResultWindow"
    Width="1338"
    Height="746"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Style cho TextBlock Result  -->
        <Style x:Key="ResultTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="DarkSlateGray" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="0,50,0,0" />
        </Style>
    </Window.Resources>

    <Grid>
        <!--  TextBlock Result  -->
        <TextBlock Style="{StaticResource ResultTextBlockStyle}" Text="Result" />

        <Grid
            Grid.RowSpan="2"
            Height="398"
            Margin="100,153,100,0"
            VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!--  Dòng 1  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="36"
                FontWeight="Bold"
                Text="Answer By:" />
            <TextBlock
                x:Name="AnswerBy"
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="36"
                FontWeight="Bold" />

            <!--  Dòng 2  -->
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="36"
                FontWeight="Bold"
                Text="Quizz:" />
            <TextBlock
                x:Name="QuizzName"
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="36"
                FontWeight="Bold" />

            <!--  Dòng 3  -->
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="36"
                FontWeight="Bold"
                Text="Correct Number:" />
            <TextBlock
                x:Name="CorrectNumber"
                Grid.Row="2"
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="36"
                FontWeight="Bold" />

            <!--  Dòng 4  -->
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="36"
                FontWeight="Bold"
                Text="Time:" />
            <TextBlock
                x:Name="Time"
                Grid.Row="3"
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="36"
                FontWeight="Bold" />

            <!--  Dòng 5  -->
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="36"
                FontWeight="Bold"
                Text="Complete:" />
            <TextBlock
                x:Name="IsCompelete"
                Grid.Row="4"
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="36"
                FontWeight="Bold" />
        </Grid>
        <Button
            Width="206"
            Height="52"
            Margin="985,613,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="LightGreen"
            Click="Button_Click"
            Content="OK"
            FontSize="36" />
    </Grid>
</Window>
