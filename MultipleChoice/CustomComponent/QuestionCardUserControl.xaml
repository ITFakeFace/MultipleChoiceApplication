<UserControl
    x:Class="MultipleChoice.CustomComponent.QuestionCardUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MultipleChoice.CustomComponent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="500"
    Height="200"
    d:DesignHeight="200"
    d:DesignWidth="500"
    mc:Ignorable="d">
    <Border
        Width="500"
        Height="200"
        Background="White"
        BorderBrush="#2C3E50"
        BorderThickness="4"
        ClipToBounds="False"
        CornerRadius="30">
        <Grid ClipToBounds="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                Margin="10"
                ClipToBounds="True"
                CornerRadius="20">
                <Border.Background>
                    <ImageBrush
                        x:Name="ImageBox"
                        ImageSource="/Assets/DefaultImage.jpg"
                        Stretch="UniformToFill" />
                </Border.Background>
            </Border>
            <StackPanel Grid.Column="1" Orientation="Vertical">

                <TextBlock
                    x:Name="TxtTitle"
                    Margin="0,0,0,10"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="This is a very long Title with multiple content inside it"
                    TextWrapping="Wrap" />
                <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                    <TextBlock
                        FontSize="16"
                        Text="Author: "
                        TextWrapping="Wrap" />
                    <TextBlock
                        x:Name="TxtAuthor"
                        FontSize="16"
                        Text="This is a very long username"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                    <TextBlock
                        FontSize="16"
                        Text="Category: "
                        TextWrapping="Wrap" />
                    <TextBlock
                        x:Name="TxtCategory"
                        FontSize="16"
                        Text="Example Category"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                    <TextBlock
                        FontSize="16"
                        Text="Question: "
                        TextWrapping="Wrap" />
                    <TextBlock
                        x:Name="TxtQuestionNumber"
                        FontSize="16"
                        Text="100"
                        TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
