<Window x:Class="MultipleChoice.QuizzTakingWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultipleChoice"
        mc:Ignorable="d"
        Title="QuizzTakingWindows" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen" Height="746" Width="1338">
    <Window.Resources>
        <Style x:Key="QuestionChoiceBtn" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="2.5 2.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Background" Value="LightBlue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="40" Height="40" Margin="0,0,8,0">
                                <Ellipse Stroke="Black" StrokeThickness="2" Fill="White"/>
                                <Ellipse x:Name="Dot"
                                         Margin="4"
                                         Fill="Black"
                                         Visibility="Collapsed"/>
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Dot" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="9*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border x:Name="Sidebar"
                Background="#2C3E50"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- List câu hỏi -->
                <StackPanel x:Name="SidebarButtonsPanel"
                            Margin="0,20,0,0"
                            Orientation="Vertical"
                            Visibility="Visible">
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Question List" FontSize="16" Foreground="White"/>
                    </StackPanel>
                    <WrapPanel x:Name="QuestionChoicePanel" Orientation="Horizontal" HorizontalAlignment="Center" Width="{Binding ElementName=SideBar, Path=ActualWidth}">
                    </WrapPanel>
                </StackPanel>

                <!-- Nút Nộp bài -->
                <Button Grid.Row="2"
                        Margin="10"
                        Content="✅ Nộp bài"
                        Height="40"
                        Background="LightGreen" Click="SubmitBtn_OnClick" />
            </Grid>
        </Border>

        <!-- Nội dung câu hỏi chính -->
        <Grid Margin="20" Grid.Column="1">
            <StackPanel x:Name="QuestionAndAnswer" Grid.Column="1" HorizontalAlignment="Center">
                <!-- Countdown TextBlock -->
                <TextBlock Name="CountdownTextBlock" FontSize="32" Foreground="Red" HorizontalAlignment="Center" Margin="0, 10, 0, 20"/>

                <!-- Câu hỏi -->
                <TextBlock x:Name="questionTxtBlock" FontSize="80" Margin="0 0 0 10"/>

                <!-- Các câu trả lời -->
                <StackPanel x:Name="AnswersPanel">
                    <RadioButton x:Name="Q1" GroupName="answerRadioBtn" Checked="Answer_Checked" />
                    <RadioButton x:Name="Q2" GroupName="answerRadioBtn" Checked="Answer_Checked" />
                    <RadioButton x:Name="Q3" GroupName="answerRadioBtn" Checked="Answer_Checked" />
                    <RadioButton x:Name="Q4" GroupName="answerRadioBtn" Checked="Answer_Checked" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Nút Next và Submit -->
        <Button x:Name="NextBtn" Margin="939,605,71,0" Background="LightGreen" FontSize="32" Grid.Column="1" VerticalAlignment="Center" Height="44" Width="194" Click="NextBtn_Click">
            <TextBlock x:Name="NextBtnTxtBlock" VerticalAlignment="Center" HorizontalAlignment="Center">Next</TextBlock>
        </Button>

        <Button x:Name="SubmitBtn" 
                Margin="939,605,71,0" 
                Background="LightGreen" 
                FontSize="32" Grid.Column="1" 
                VerticalAlignment="Center" 
                Height="44" 
                Width="194" 
                Click="SubmitBtn_OnClick" 
                Visibility="Collapsed">
            <TextBlock x:Name="SubmitTxtBlock" VerticalAlignment="Center" HorizontalAlignment="Center">Submit</TextBlock>
        </Button>
    </Grid>
</Window>
